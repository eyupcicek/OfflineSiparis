<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="horizontal"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:weightSum="4">

    <TextView
        android:id="@+id/tv_stkfiytanim"

        android:textColor="@color/siyah"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Tanim"
        android:layout_gravity="center"
        android:layout_weight="2.59" />

    <TextView
        android:id="@+id/tv_stkfiy"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:text="fiyat"
        android:textAlignment="center"
        android:textColor="@color/siyah"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/tv_fiykur"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/siyah"
        android:text="Kur"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/tv_fiyaktif"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textColor="@color/kirmizi"
        android:text="*"

        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"/>
</LinearLayout>
</LinearLayout>