<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:id="@+id/imageView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_bulstok"
            android:hint="Bul"
            android:height="30sp"
            android:background="@color/gri"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/carilistview"
            android:layout_alignEnd="@+id/carilistview"
            android:layout_alignLeft="@+id/carilistview"
            android:layout_alignStart="@+id/carilistview" />

    </LinearLayout>


    <ListView
        android:id="@+id/stokkartlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:layout_marginBottom="7sp"
        android:layout_below="@+id/linearLayout2" />




</RelativeLayout>